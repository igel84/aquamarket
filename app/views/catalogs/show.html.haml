- content_for :head do
  %title= @catalogue_section.name
  %meta{name:"keywords", content:"#{@catalogue_section.name} в воронеж белгород лиски россошь борисоглебск"}
  %meta{name:"description", content:"#{@catalogue_section.name} в воронеж белгород лиски россошь борисоглебск"}
#tienda_category_header
  %h1= @catalogue_section.name
.category_description
  != @catalogue_section.body
%table#products
  - @catalogue_section.products.in_groups_of(4, nil) do |products|
    %tr
      - products.each_with_index do |product, index|
        - unless product.nil?
          %td
            %h2= link_to product.name, catalog_product_path(@catalogue_section, product)
    %tr
      - products.each_with_index do |product, index|
        - unless product.nil?
          %td
            = link_to catalog_product_path(@catalogue_section, product) do
              = image_tag(product.product_images.first.image.thumb, align: "middle", width: "96", alt: "#{@catalogue_section.products[index].name}", border: "0", title: "#{@catalogue_section.products[index].name}") unless product.product_images.empty?
    %tr
      - products.each_with_index do |product, index|
        - unless product.nil?
          %td= link_to 'Подробнее...', catalog_product_path(@catalogue_section, product)
    %tr
      - products.each_with_index do |product, index|
        - unless product.nil?
          %td!= '<br /> Цена: ' + product.price.to_s + ' руб.'
    %tr
      - products.each_with_index do |product, index|
        - unless product.nil? 
          - unless product.product_types.first
            %td.price
              = form_for :cart_item, url: add_to_cart_path, method: :post, remote: true do |f|              
                = f.hidden_field :product_id, value: product.id
                = f.hidden_field :quantity, value: 1
                %img.addcart{:alt => "Add to Cart", :onclick => "document.forms[#{index.to_s}].submit();", :onmouseout => "src='/assets/addcart.png'", :onmouseover => "src='/assets/addcart_h.png'", :src => "/assets/addcart.png"}/
          - else
            %td.price
              %img.addcart{:alt => "Add to Cart", :onclick => "window.location.href='#{catalog_product_path(@catalogue_section, product)}#product_types'", :onmouseout => "src='/assets/addcart.png'", :onmouseover => "src='/assets/addcart_h.png'", :src => "/assets/addcart.png"}/